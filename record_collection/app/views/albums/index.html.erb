
<h1 class="text-center">Molly's Music Library</h1>

<%= link_to 'Add a new album', new_album_path, class:"btn btn-primary btn-block"%>

<div id="albums">
        <% @albums = @albums.sort { |a,b| a['artist'] <=> b['artist'] } %>
        <% @albums.each do |a| %>
            <div style="height: 250px; width: 250px;" class="bg-light m-2 float-left d-flex flex-column justify-content-center align-items-end">
            <div><%= a['artist'] %><br></div>
            <div class="text-right font-weight-light"><%= a['title'] %><br></div>
            <div class="text-black-50 mb-4 font-weight-light"><%= a['year_released'] %><br></div>
            <div class="d-flex flex-row">
            <div class="m-2"><%= link_to 'View', album_path(a), class:"btn btn-outline-secondary btn-sm" %></div>
            <div class="m-2"><%= link_to 'Edit', edit_album_path(a), class:"btn btn-outline-secondary btn-sm" %></div>
            <div class="m-2"><%= link_to 'Delete', album_path(a), class:"btn btn-outline-danger btn-sm",  method: :delete,
            data: { confirm: 'Are you sure?' } %></div>
            </div>
            </div>
            
        <% end %>
    </div>
